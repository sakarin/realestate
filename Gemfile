source 'https://rubygems.org'

gem 'rails', '3.2.8'

# Use unicorn as the app server
gem 'unicorn'
# Deploy with Capistrano
gem 'capistrano'


gem 'jquery-rails'
gem 'devise'
gem 'omniauth-facebook'
gem "cancan"
gem "rolify"
gem 'simple_form'
