<%= simple_form_for [:admin, @post_group], :html => { :class => 'form-horizontal' } do |f| %>
    <fieldset>
      <legend><%= t('controllers.' + controller.action_name.capitalize.downcase) %><%= t('activerecord.models.post_group') %></legend>

      <%= f.input :name %>
      <%= f.input :slug %>
      <%= f.input :parent, :as => :select, :collection => PostGroup.all, :input_html => { :rows => 5 } %>
      <%#= f.collection_select(:parent, Parent.all, :id, :name, include_blank: true) %>
      <%= f.input :description %>


      <div class="form-actions">
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('buttons.cancel'), admin_post_groups_path, :class => 'btn' %>
      </div>
    </fieldset>
<% end %>
