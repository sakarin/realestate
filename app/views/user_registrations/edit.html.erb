<div class="row-fluid">


  <div id="main" class="span12">
    <div id="content">
      <%= render :partial => "account/users/user_tabs", :locals => {:current => 'User'} %>

      <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put, :class => 'bs-docs-example form-horizontal'}) do |f| %>
          <h3>ปรับปรุงข้อมูลบัญชีผู้ใช้</h3>
          <%= f.error_notification %>
          <%= display_base_errors resource %>
          <%#= devise_error_messages! %>

          <h4>ข้อมูลเข้าสู่ระบบ</h4>


          <%= f.input :email, :required => true %>
          <%= f.input :password, :autocomplete => "off", :hint => " ใส่รัหสเดิมที่ช่องนี้ เว้นว่างไว้กรณีที่ไม่ต้องการเปลี่ยนรหัสผ่าน", :required => false %>
          <%= f.input :password_confirmation, :required => false %>
          <%= f.input :current_password, :hint => "เราต้องใช้รหัสผ่านในปัจจุบันของคุณเพื่อยืนยันการเปลี่ยนแปลงของคุณ", :required => true %>

          <div class="form-actions">
            <%= f.submit t('user.buttons.update'), :class => "btn btn-primary" %>
          </div>


      <% end %>

    </div>
  </div>


</div>