<div class="image">
  <%= link_to image_tag(image.attachment_url(:thumb)), image if image.attachment? %>
  <div class="name"><%= best_in_place image, :name, :path => account_image_path(image) %></div>
  <div class="actions">
    <%= link_to "edit", edit_account_image_path(image) %> |
    <%= link_to "remove", image, :confirm => 'Are you sure?', :method => :delete %>
  </div>
</div>