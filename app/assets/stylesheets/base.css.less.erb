
body {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 12px;
    color: #333;
}

h1, h2, h3 {
    font-family: Arial, Helvetica, sans-serif;
    margin: 0 0 20px 0;
    color: #333;
}

#sidebar {

    .block {
        margin-bottom: 20px;
    }

}

.top2 {
    padding-top: 2px;
}

.panel {
    border: 1px solid #DDD;
    background: #F8F8F8;
}

.block {
    box-shadow: 0 3px 3px rgba(0, 0, 0, 0.1);
}

.hcard {
    padding: 10px;
    background: white;
}

.alert img {
    vertical-align: middle;
    margin-right: 5px;
    margin-top: -2px;
}

.hcard .avatar {
    float: left;
}

.floatright {
    float: right;
}

.floatleft {
    float: left;
}

.hcard .name {
    padding: 0 50px;
}

.hcard .name h4, .hcard h4 {
    padding: 0;
    margin: 0;
    font-size: 100%;
    line-height: 1.5em;
}

.block.panel .cnt {
    padding: 15px 10px 10px;
    background: transparent url(<%= asset_path 'admin/bg/divider-all.png' %>) no-repeat left top;
    border: 2px white solid;
}

#main {

    float: right;
    padding: 15px;
    white-space: wrap;
    background: white;
    border: 1px solid #DDD;
    box-shadow: 0 3px 3px rgba(0, 0, 0, 0.1);
}

form h4 {
    background-color: none;
    color: #777;
    padding: 5px 0;
    margin-bottom: 15px;
    border-bottom: 1px dotted #CCC;
}

form .clearfix {
    margin-bottom: 18px;
    zoom: 1;
}

.aligncenter {
    text-align: center;
}

form .actions {
    text-align: right;
}

.help-block {
    display: block;
    max-width: 600px;
}

.help-inline, .help-block {
    font-size: 11px;
    line-height: 14px;
    color: #999;
    padding-top: 5px;
}

#maincontainer {
    text-align: left;
}

.actions {
    background: whiteSmoke;
    margin-top: 18px;
    margin-bottom: 18px;
    padding: 17px 20px 18px 150px;
    border-top: 1px solid #DDD;
    -webkit-border-radius: 0 0 3px 3px;
    -moz-border-radius: 0 0 3px 3px;
    border-radius: 0 0 3px 3px;
}

.actions.no-indent {
    text-align: center;
    padding-left: 20px;
    position: relative;
}

.f-filter, .filter-box {
    margin: 7px auto;
    padding: 8px;
    background-color: whiteSmoke;
    border-radius: 3px;
}

form {
    position: relative;
    margin-bottom: 20px;
    padding: 0;
}

table {
    width: 100%;
    margin-bottom: 20px;
    padding: 0;
    border-collapse: separate;
    font-size: 12px;
    border: 1px solid #DDD;
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    border-radius: 4px;
}

table.blue th, table.blue td {
    line-height: 1.3em;
    text-align: center;
}

table.blue th {
    color: white;
    font-weight: bold;
    border: none;
    background-color: #3C78B4;
    background: #3C78B4;
    background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0.2, #4C8CCB), color-stop(0.8, #3C78B4));
    background-image: -moz-linear-gradient(center top, #4C8CCB20, #3C78B4 80%);
}

table th {
    padding-top: 9px;
    font-weight: bold;
    vertical-align: middle;
    border-bottom: 1px solid #DDD;
}

table th, table td {
    padding: 10px 10px 9px;
    line-height: 18px;
    text-align: left;
}

#footer {
    clear: both;
    border-top: 1px dotted #AAA;
    padding: 10px 0;
    color: #FFFFFF;
    text-align: center;
    margin-top: 20px;
}

/* ----------------------------------------------------- */
/* -----               process nav             --------- */
/* ----------------------------------------------------- */
ul.processnav {
    font: bold 14px verdana, arial, sans-serif;
    list-style-type: none;
    width: 100%;
    overflow: hidden;
}

ul.processnav li {
    float: left;
}

ul.processnav li a {
    color: #aaa;
    white-space: nowrap;
    position: relative;
    line-height: 35px;
    margin-right: 25px;
    padding: 10px 20px 10px 0;
    background: transparent url(<%= asset_path 'admin/arrow-right.png' %>) center right no-repeat;
}

ul.processnav li a:hover {
    color: #000;
    text-decoration: none;
    background: transparent url(<%= asset_path 'admin/arrow-right-active.png' %>) center right no-repeat;
}

ul.processnav li.last a, ul.processnav li.last a:hover, ul.processnav li.selectedtab.last a {
    margin-right: 0;
    background: none;
}

ul.processnav li a span.num, ul.processnav li.disabledtab a:hover span.num {
    padding: 10px 12px;
    color: #aaa;
    background: transparent url(<%= asset_path 'admin/step-bg.png' %>) center center no-repeat;
}

ul.processnav li.selectedtab a {
    background: transparent url(<%= asset_path 'admin/arrow-right-active.png' %>) center right no-repeat;
    color: #000;
    text-decoration: none;
}

ul.processnav li.selectedtab a span.num, ul.processnav li a:hover span.num {
    color: #fff;
    background: transparent url(<%= asset_path 'admin/step-bg-active.png' %>) center center no-repeat;
}

ul.processnav li.disabledtab a {
    background: transparent url(<%= asset_path 'admin/arrow-right.png' %>) center right no-repeat;
    color: #aaa !important;
    text-decoration: none !important;
}

ul.processnav li.last.disabledtab a {
    background: none;
}

.even {
    background: whiteSmoke;
}

.odd {
}

.act {
    display: inline-block;
    text-indent: -999em;
    width: 21px;
    height: 21px;
    background-image: url(<%= asset_path 'admin/icons/extranet-sprite.png' %>);
    background-color: transparent;
    background-repeat: no-repeat;
    margin: 2px;
}

.delete {
    background-position: 0 -21px;
}

table.blue a:visited.sort_link {
    color: white;
}

table.blue .sort_link {
    padding-right: 15px;
/*background-image: url(
<%= asset_path 'admin/icons/extranet-sprite.png' %> );*/
    background-color: transparent;
    background-repeat: no-repeat;
    background-position: right 0;
    color: white;
}

h3 {
    line-height: 30px;
    font-size: 16px;
}