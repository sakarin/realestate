.act {
    display: inline-block;
    text-indent: -999em;
    width: 21px;
    height: 21px;
    background-image: url(<%= asset_path 'admin/icons/extranet-sprite.png' %>);
    background-color: transparent;
    background-repeat: no-repeat;
    margin: 2px;
}

.delete {
    background-position: 0 -21px;
}

